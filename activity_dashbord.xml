<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashbord">

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/soonchokadi"
        android:gravity="center_horizontal"
        android:text="Soon Chokadi"
        android:textColor="#A9000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/upsoonchokadi"
        android:gravity="center_horizontal"
        android:text="Updated Soon Chokadi"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/pazzal"
        android:gravity="center_horizontal"
        android:text="Pazzal Game"
        android:textSize="30sp" />

</LinearLayout>